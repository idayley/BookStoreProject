@{
    ViewData["Title"] = "Home Page";
}

@model  ProjectListViewModel


<div class="text-center">
    <h1>Bookstore</h1>
</div>

<!-- This page returns the list of books stored in the database-->

<table class="table">
    <thead>
        <tr><th>Title</th><th>Author</th><th>Publisher</th><th>ISBN</th><th>Classification</th><th>Price</th><th>Page Number</th></tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Projects)
        {
            <tr>
                <td>@x.Title</td>
                <td>@x.Author</td>
                <td>@x.Publisher</td>
                <td>@x.ISBN</td>
                <td>@x.Classification</td>
                <td>@x.Price</td>
                <td>@x.BookPages</td>
            </tr>
        }
    </tbody>
</table>

<br />
<div page-model="@Model.Paginginfo" page-action="Index" page-classes-enabled="true" page-class="btn" 
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary"
     class="btn-group pull-right m-1"></div>